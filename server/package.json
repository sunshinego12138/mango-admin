{
  "name": "mango",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development bun run --watch ./src/index.ts",
    "test": "bun run --watch ./test/custom.test.ts",
    "build:linux": "rm -rf ./dist/server && cross-env NODE_ENV=production bun build --compile --target=bun-linux-x64 --minify --sourcemap --bytecode ./index.ts --outfile dist/server",
    "db:dev": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:reset": "prisma migrate reset",
    "db:introspect": "prisma introspect",
    "db:studio": "prisma studio"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/bun": "latest",
    "@types/figlet": "^1.7.0",
    "cross-env": "^7.0.3",
    "prisma": "^6.2.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.2.0",
    "@elysiajs/cron": "^1.2.0",
    "@elysiajs/jwt": "^1.2.0",
    "@elysiajs/static": "^1.2.0",
    "@elysiajs/swagger": "^1.2.0",
    "@prisma/client": "^6.3.1",
    "bcryptjs": "^2.4.3",
    "dayjs": "^1.11.13",
    "elysia": "^1.2.12",
    "elysia-ip": "^1.0.8",
    "glob": "^11.0.1",
    "logestic": "^1.2.4",
    "mango-core": "^0.0.8",
    "mango-types": "^0.0.5",
    "reflect-metadata": "^0.2.2",
    "uuid": "^11.0.5"
  }
}
